<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.youtubemanager.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_searchFragment_to_playVideoFragment"
            app:destination="@id/playVideoFragment" />
        <action
            android:id="@+id/action_searchFragment_to_channelFragment"
            app:destination="@id/channelFragment" />
    </fragment>

    <fragment
        android:id="@+id/playVideoFragment"
        android:name="com.example.youtubemanager.fragment.PlayVideoFragment"
        android:label="PlayVideoFragment"
        tools:layout="@layout/fragment_play_video"
        />

    <fragment
        android:id="@+id/channelFragment"
        android:name="com.example.youtubemanager.fragment.ChannelFragment"
        android:label="ChannelFragment"
        tools:layout="@layout/fragment_channel"
        >
        <action
            android:id="@+id/action_channelFragment_to_playVideoFragment"
            app:destination="@id/playVideoFragment" />
    </fragment>
</navigation>